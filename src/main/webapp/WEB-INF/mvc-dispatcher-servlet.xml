	<bean id="mimeType" class="javax.activation.MimetypesFileTypeMap"></bean>
	
	<bean id="applicationProperties" class="com.sumadga.utils.ApplicationProperties">
		<property name="maxSubFolders" value="20000"/>
		<property name="mediaCompletePath" value="/home/sravan/cms/"/>
